

<header class="">
  <div class="nologin_nav">
    <div class="nologin_logo">后台管理系统</div>
    <div class="nologin_menu">
      <ul id="menu">
        <% if signed_in? %>
            <li id="fat-menu" class="pull-right">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul>
                <li><a href="JAVASCRIPT:update_password()">setting</a><%#= link_to "setting", '/admin2s/setting' %></li>
                <li>
                  <%= link_to "退出", '/sessions/sign_out', method: "delete" %>
                </li>
              </ul>
            </li>
        <% end %>
      </ul>
    </div>
  </div>

</header>
<script>
    $( "#menu" ).menu();
    function update_password(){
        $.ajax({
            url:'/admin2s/setting',
            type:'get',
            beforeSend:function(response){
                $("#rightContent").html('<div style="text-align:center;width:100px;height:100px;border:1px solid #dcdcdc;position:absolute;left:50%;margin-top:150px;background:#ebeced;line-height:100px;font-weight:bold;"><img src="/loading.gif" style="margin-top:40px;"/></div>')
            },
            success:function (response,data){
                $('#rightContent').html(response)
            },
            error:function(response){
                $('#rightContent').html('response')
            }
        })
    }
</script>
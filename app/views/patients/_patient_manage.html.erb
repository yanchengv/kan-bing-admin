//    添加患者
    function createPatient(){
        $.ajax({
            type:'get',
            url:'/patients/new?menu_id=<%=@menu_id%>&hos_id=' + $('#patient_hos_id').val() + "&dep_id=" + $('#patient_dep').val(),
            success:function(data){
                $('#create_or_edit_form2').html(data)

            }
        })
        $('#create_or_edit_form2').modal('show')
    }

//    编辑患者
    function editPatient(){
        if (selectedIds.length==1){
            $.ajax({
                type:'get',
                url:'/patients/'+selectedIds+'/edit?menu_id=<%=@menu_id%>&hos_id=' + $('#patient_hos_id').val() + "&dep_id=" + $('#patient_dep').val(),
                success:function(data){
                    $('#create_or_edit_form2').html(data)
                }
            })
            $('#create_or_edit_form2').modal('show')
        }else{
            alert('必须且只能选择一条记录!')
        }
    }
// 删除患者
    function deletePatient(){
        if(confirm("确定要删除吗？") ) {
            $.ajax({
                type: 'delete',
                url: '/patients/' + selectedIds,
                success: function (data) {
                    if (data['success']) {
                        alert('删除成功!')
                    } else {
                        alert('删除失败!')
                    }
                }
            })
        }
        var url= "/patients/show_index?menu_id=<%=@menu_id%>&hos_id=" + $('#patient_hos_id').val() + "&dep_id=" + $('#patient_dep').val()
        jQuery("#list10").jqGrid('setGridParam',{url:url}).trigger("reloadGrid");
    }

//    发送邮箱激活码
    function sendEmailPatient(){
        $.ajax({
            type:'get',
            url:'/patients/send_email?pat_ids='+selectedIds,
            success:function(data){
                if (data['success']){
                    alert('发送成功!')
                }else {
                    alert('发送失败!如果是多个,可能部分发送成功!')
                }
            }
        })
        var url= "/patients/show_index?menu_id=<%=@menu_id%>&hos_id=" + $('#patient_hos_id').val() + "&dep_id=" + $('#patient_dep').val()
        jQuery("#list10").jqGrid('setGridParam',{url:url}).trigger("reloadGrid");
    }

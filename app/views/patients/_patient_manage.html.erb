<div id="search_div" style="margin:10px;">
  医院：<select  id="patient_hos" onchange="search_hos()" >
  <option value="">---请选择---</option>
  <% if @hospitals.nil? %>
      <% @hospitals = Hospital.all %>
  <% end %>
  <% if !@hospitals.empty? %>
      <% @hospitals.each do |hos| %>
          <option id='hos_<%= hos.id %>' value="<%= hos.id %>"><%= hos.name %></option>
      <% end %>
  <% end %>
</select>
  科室：<span id="search_dep_id"><select id="patient_dep" onchange="search_dep()" >
  <option value="">---请选择---</option>
</select></span>
  是否激活:<select id="is_activated" onchange="search_activated()">
  <option value="">全部</option>
  <option value="1">已经激活</option>
  <option value="0">未激活</option>
</select>
</div>

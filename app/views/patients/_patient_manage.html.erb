        }else{
            alert('必须且只能选择一条记录!')
        }
    });
    $( "#delete_patient").button().on( "click", function() {
        if(confirm("确定要删除吗？") ) {
            $.ajax({
                type: 'delete',
                url: '/patients/' + selectedIds,
                success: function (data) {

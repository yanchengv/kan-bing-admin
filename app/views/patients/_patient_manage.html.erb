    function pat_search_hos(){
        jQuery("#list10").jqGrid('setGridParam', {url: "/patients/show_index?menu_id=<%=@menu_id%>&hos_id=" + $('#patient_hos_id').val() + "&dep_id=" + $('#patient_dep').val()  + "&is_activated=" + $('#is_activated').val() }).trigger("reloadGrid")
        var hos_id = $('#patient_hos_id').val()
        $.ajax({
            type: 'get',
            url: '/patients/search_department?menu_id=<%=@menu_id%>&hos_id='+hos_id,
            success: function (data) {
                $('#search_dep_id').html(data)
            }
        });
        $.ajax({
            type: "get",
            url: '/patients/is_permission?menu_id=<%=@menu_id%>&hospital_id=' + $('#patient_hos_id').val() + "&department_id=" + $('#patient_dep').val(),
            data: 'text',
            success: function (data) {
                if (data['add']){
                    $('#create_patient').removeClass('disabled')
                    $('#create_patient').addClass('active')
                }else{
                    $('#create_patient').removeClass('active')
                    $('#create_patient').addClass('disabled')
                }
                if (data['delete']){
                    $('#delete_patient').removeClass('disabled')
                    $('#delete_patient').addClass('active')
                }else{
                    $('#delete_patient').removeClass('active')
                    $('#delete_patient').addClass('disabled')
                }
                if (data['update']){
                    $('#edit_patient').removeClass('disabled')
                    $('#edit_patient').addClass('active')
                }else{
                    $('#edit_patient').removeClass('active')
                    $('#edit_patient').addClass('disabled')
                }
                if (data['show']){
                    $('#send_email_patient').removeClass('disabled')
                    $('#send_email_patient').addClass('active')
                    $('#send_phone_patient').removeClass('disabled')
                    $('#send_phone_patient').addClass('active')
                }else{
                    $('#send_email_patient').removeClass('active')
                    $('#send_email_patient').addClass('disabled')
                    $('#send_phone_patient').removeClass('active')
                    $('#send_phone_patient').addClass('disabled')
                }
            }
        })
    }
    function pat_search_dep(){

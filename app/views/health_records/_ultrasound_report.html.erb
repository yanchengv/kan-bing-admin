  <tr>
    <td>门诊号:&nbsp;&nbsp;&nbsp;&nbsp;</td>
    <td>住院号:&nbsp;&nbsp;&nbsp;&nbsp;</td>
    <td>床位：<%= @iu.bed_no %>&nbsp;&nbsp;</td>
    <td>申请医生：<%= @iu.apply_doctor_name %></td></tr>
  <tr>
    <td colspan="4" class="float-left">检查项目：<%= @iu.examined_item_name %></td></tr>
</table>
<div class="line"></div>
<div id="pictures1" class="video_lists">
  <table>

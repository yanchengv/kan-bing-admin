<%= stylesheet_link_tag 'page_blocks/logo'%>
<div class="index_model_box_3_1">
  <div class="index_model_title">
    <h3 class="fl">用户登陆</h3>
  </div>
  <form accept-charset="UTF-8" id="sess_form" method="post">
    <table style="width:100%;margin-top:15px">
      <tr>
        <td>
        <span class="login_username">
        <input type="text" class="login_username_input" id="us" name="session[username]" placeholder="用户名/邮箱/手机号"/>
        </span>
      </tr>
      <tr>
        <td>
        <span class="login_username">
        <input class="login_password_input" id="pa" name="session[password]" placeholder="密码" type="password"/>
        </span>
        </td>
      </tr>
      <tr>
        <td>
          <a style="float:left;color:#666;font-family: 'Microsoft YaHei',Verdana;" href="/sessions/activated_user">帐号激活</a>
          <a style="float:right;color:#666;font-family: 'Microsoft YaHei',Verdana;" href="/sessions/find_pwd_type">忘记密码？</a>
        </td>
      </tr>
      <tr>
        <td>
          <input type="button" id="center_login" class="login_btn" value="登录">
        </td>
      </tr>
    </table>
  </form>
</div>


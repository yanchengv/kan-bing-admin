<script>
  function change_doctor(id) {
        $.ajax({
            type: 'get',
            url: '/doctors/get_doctor_to_page',
            data: {
                id: id
            },
            dataType: 'json',
            success: function (data) {
                if(data['success'] == true){
                    document.getElementById("img_url").src = "http://mimas-open.oss-cn-hangzhou.aliyuncs.com/" + data['doctor'].photo;
                    document.getElementById("img_url").alt = data['doctor'].name;
                    document.getElementById("img_url").title = data['doctor'].name;
                    document.getElementById("md_doc_description").innerHTML = data['doctor'].introduction.substr(0, 95);
                    document.getElementById("md_doc_name").innerHTML = data['doctor'].name;
                    document.getElementById("md_doc_hospital_name").innerHTML = data['doctor'].hospital.name;
                    document.getElementById("md_doc_description").innerHTML = data['doctor'].department.name;
                    document.getElementById("doctor_id").value = data['doctor'].id;
                }else{
                    alert('信息获取失败!');
                }

            }
        })

    }

</script>

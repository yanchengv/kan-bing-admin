<p>
  <style>.btn a {
      color: #ffffff;
  }</style>
  <!--<span class="pull-right btn btn-primary" style="margin-top:4px;margin-right:15px;"><%#= link_to '返回', notes_path %></span>-->
  <strong class="ui-jqdialog-title">编辑区块</strong></p>
<div class="EditTable">
  <%= form_for @page_block, :url => url_for(:controller => 'page_blocks', :action => 'update') do |f| %>
      <% @home_pages = HomePage.all %>
      <div class="field pull-left font-yahei" style="margin-bottom:15px;margin-top:15px;margin-right:15px;">
        <%= f.label '标题', :class => "CaptionTD" %>
        <%= f.text_field :name, :class => 'FormElement ui-widget-content ui-corner-all' %>
      </div>
      <div class="clear"></div>
      <div class="field" style="margin-bottom:15px;">
        <%= f.label '内容', :class => "CaptionTD" %>
        <%= f.kindeditor :content, {
                :allowFileManager => false,
                :filterMode => false,
                :owner_id => @page_block.id,
                :editor_id => 'my_editor',
                :window_onload => true,
                :simple_mode => false,
                :authenticity_token => form_authenticity_token,
                uploadJson: "/home_pages/upload?authenticity_token=#{form_authenticity_token}"}
        %>
      </div>
      <div class="clear"></div>
      <div class="field font-yahei" style="margin-bottom:15px;">
        <%= f.label '所属界面', :class => "CaptionTD" %>
        <%= f.select(:page_id, @home_pages.collect { |t| [t.name, t.id] }, {:include_blank => false}, :class => "select2-container FormElement ui-widget-content ui-corner-all") %>
      </div>
      <div class="clear"></div>
      <div class="field font-yahei" style="margin-bottom:15px;">
        <%= f.label '医生ids', :class => "CaptionTD" %>
        <input type="text" name="doctor_list">
      </div>
      <div class="clear"></div>
      <div class="actions">
        <%= f.submit '保存', :class => 'fm-button ui-state-default ui-corner-all fm-button-icon-left ' %>
      </div>


  <% end %>


</div>


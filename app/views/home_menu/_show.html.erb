</style>
<SCRIPT type="text/javascript">
    <!--
    var setting = {
        view:{
            addHoverDom:addHoverDom,
            removeHoverDom:removeHoverDom,
            selectedMulti:false,
            showIcon: true
        },
        edit: {
            enable: true,
            showRemoveBtn: setRemoveBtn,
            showRenameBtn: showRenameBtn,
            removeTitle: "删除页面",
            renameTitle: "编辑页面",
            drag:{
                prev:false,
//                inner:per_inner,
                next:false,
                isCopy:true,
                isMove:true
            }
        },
        data: {
            simpleData: {
                enable: true
            }
        },
        callback: {
            /*编辑与删除回调*/
            beforeEditName: beforeEditName,
            beforeRemove: beforeRemove
        }
    };
    function   beforeEditName(treeId,treeNode){
        var id=treeNode['id'];
        $.ajax({
            url:'home_menu/edit',
            type:'get',
            data:{nodeId:id},
            success:function(data){
                $('#showHomePage').html(data)
            }
        })
        return false
    };
//    点击删除按钮时触发的方法
    function  beforeRemove(treeId,treeNode){
        var nodeId=treeNode['id'];//要删除的节点id
        var msg = treeNode.isParent ? "确定删除父节点？":"确定删除此节点？"
        if (confirm(msg)==true){
            $.ajax({
                type:'delete',
                url:'home_menu/destroy',
                data:{nodeId:nodeId} ,
                success:function(){
                    $.ajax({
                        type:'get',
                        url:'home_menu/show',
                        success:function(data){
                            $("#rightContent").html(data)
                        }
                    });
                }
            })
            return true
        }
        return false


    };
    function setRemoveBtn(treeId, treeNode) {  //判断是否为根结点,根结点不可删除
            return true;
    }
    function addHoverDom(treeId,treeNode){
        if ((''+treeNode.id).indexOf("_") > 0) {
        }else{
            var sObj = $("#" + treeNode.tId + "_span");
            if (treeNode.editNameFlag || $("#addBtn_"+treeNode.tId).length>0) return;
            var addStr = "<span class='button add' id='addBtn_" + treeNode.tId
                    + "' title='添加子页面' onfocus='this.blur();'></span>";
            sObj.after(addStr);
        }
        var btn = $("#addBtn_"+treeNode.tId);
        if (btn) btn.bind("click", function(){
            var zTree=$.fn.zTree.getZTreeObj(treeId)
            addChildMenu(treeId,treeNode)
            return false;
        });
    }

    function removeHoverDom(treeId,treeNode){
        $("#addBtn_"+treeNode.tId).unbind().remove();
    }
    function showRemoveBtn(treeId, treeNode) {
        return !treeNode.isFirstNode;
    }
    function showRenameBtn(treeId, treeNode){
        var treeObj = $.fn.zTree.getZTreeObj(treeId);
            return true

    } ;
//    添加子菜单
    function addChildMenu(treeId,treeNode){
        var id=treeNode['id'] //父节点Id
        $.ajax({
            url:'home_menu/new',
            type:'get',
            data:{nodeId:id},
            success:function(data){
                $('#showHomePage').html(data)
            }
        })
    };

//    添加一级菜单
    function addMainMenu(parentId){
        var id=parentId //父节点Id为0
        $.ajax({
            url:'home_menu/new',
            type:'get',
            data:{nodeId:id},
            success:function(data){
                $('#showHomePage').html(data)
            }
        })
    };

    var homeMenus=<%= raw @home_menus.to_json%>
    $(document).ready(function(){
        $.fn.zTree.init($("#homeMenuTree"), setting, homeMenus);
    });
    //-->
//    当点击添加新页面按钮时，默认添加的时一级菜单，一级菜单parent_id=0


</SCRIPT>
<div class="zTreeDemoBackground menu_box col-md-11">
  <div class="col-md-2">
    <button class="add_btn" onclick=addMainMenu(0)>添加新页面</button>
    <ul id="homeMenuTree" class="ztree" style="width:100%">

    </ul>
  </div>

  <!--添加编辑富文本的显示-->
  <div id="showHomePage" class="col-md-9" style="">

  </div>
</div>


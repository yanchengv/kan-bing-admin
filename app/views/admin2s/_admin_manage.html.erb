    //搜索
    $('#search_btn').click(function () {
        var name = $('#search_name').val();
        var email = $('#search_email').val();
        var tel = $('#search_tel').val();
        jQuery("#list").jqGrid('setGridParam', {url: "admin2s/test_index?name=" + name + "&email=" + email + "&mobile_phone=" + tel}).trigger("reloadGrid")
    });
    //清空搜索条件
    $('#clear_btn').click(function () {
        $('#search_name').val('');
        $('#search_email').val('');
        $('#search_tel').val('');
    });
    //验证手机号
    function check_phone(){
        console.log(arguments);
        var reg = /^0?(13[0-9]|15[012356789]|18[0-9]|14[57])[0-9]{8}$/;
        if (arguments[0] != '' && !reg.test(arguments[0])) {
            return [false, "手机号格式不正确！"];
        } else {
            return [true, ""];
        }
    }
    //验证email
    function check_email() {
        var email = arguments[0];
        console.log(arguments);
        var reg = /^([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+@([a-zA-Z0-9]+[_|\_|\.]?)*[a-zA-Z0-9]+\.[a-zA-Z]{2,3}$/;
        if (email != '' && !reg.test(email)) {
            return [false, "请输入有效的邮箱格式！"];
        } else {
//            var obj = $.ajax({
//                url: 'admin2s/get_by_email',
//                type: 'get',
//                data: {email: email },
//                success: function (data) {
//
//                }
//            });
            return [true, ""];
        }
    }
    //验证姓名
    function check_name() {
        console.log(arguments);
        var reg = /^(?!_)(?!.*?_$)[a-zA-Z0-9_\u4e00-\u9fa5]+$/;
        if (!reg.test(arguments[0])) {
            return [false, "只能为汉字、字母、数字、下划线,下划线不能作为开头和结尾！"];
        } else {
            return [true, ""];
        }
    }
    //授权

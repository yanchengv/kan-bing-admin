<%= javascript_include_tag 'update_password' %>
<h3>密码修改</h3>
<h6><small>密码由4-16个字符组成</small></h6>
<hr />
<%= form_for 'admin', :remote => true, :url=>{:action=>'password_update'},:html => { :method => :post,:class => "form-horizontal col-md-8 col-md-offset-1"} do |f| %>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label"><%= f.label :old_password, '旧密码'%></label>
    <div class="col-sm-10">
      <%= f.password_field :old_password, :id=>'old_pass',:style => "",:class => 'form-control ', :onblur=> 'check_old(this.value)' %>
      <div id="old_pwd_div" class='yahei'></div>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label"><%= f.label :new_password,'新密码' %></label>
    <div class="col-sm-10">
      <%= f.password_field :new_password, :id=>'pass', :style => "",:class => 'form-control', :onkeyup => 'set_new2(this.value)',:onfocus => 'check_remind(this.value)',:onblur=> 'check_new(this.value)' %>
      <div id="new_pwd_div" class='yahei'></div>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label"><%= f.label :password_confirmation, '确认密码'%></label>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation , :id=>'pass_con',:class => 'form-control', :style => "",:onblur=> 'check_new2(this.value)'%>
      <div id="new_pwd2_div" class='yahei'></div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit '确定', :id => 'password_update',:class => "btn btn-primary"%>
    </div>
  </div>
<% end %>




<div id="reminder"></div>
